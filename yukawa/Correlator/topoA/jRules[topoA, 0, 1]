Last[{{{-1, 1}, {-1, 0}}, {j[topoA, (n1_)?NonPositive, (n2_)?Positive] /; 
     n2 != 1 :> ((2 + d - n1 - 2*n2)*j[topoA, n1, -1 + n2])/
      (2*m2*(-1 + n2)) - (n1*j[topoA, 1 + n1, -2 + n2])/(2*m2*(-1 + n2)) - 
     (n1*(2*m2 - pp)*j[topoA, 1 + n1, -1 + n2])/(2*m2*(-1 + n2)), 
   j[topoA, (n1_)?NonPositive, (n2_)?Positive] /; n2 == 1 && n1 != 0 :> 
    (n1*j[topoA, 1 + n1, 0])/(-2 + d - n1) + 
     ((-3*pp + d*pp - 2*n1*pp)*j[topoA, 1 + n1, 1])/(-2 + d - n1) + 
     ((1 + n1)*(2*m2 - pp)*j[topoA, 2 + n1, 0])/(-2 + d - n1) - 
     ((1 + n1)*(4*m2 - pp)*pp*j[topoA, 2 + n1, 1])/(-2 + d - n1)}}]
