{j[topo1, (n1_)?NonPositive, (n2_)?NonPositive, (n3_)?Positive, 
   (n4_)?Positive, (n5_)?NonPositive] :> 
  Expand[j[topo1, 0, n1, n5, n3, n4]/(-j[topo1, -1, 0, 0, 0, 0] + 
      j[topo1, 0, -1, 0, 0, 0] + j[topo1, 0, 0, -1, 0, 0] + 
      j[topo1, 0, 0, 0, -1, 0] - j[topo1, 0, 0, 0, 0, -1] + 
      pp*j[topo1, 0, 0, 0, 0, 0])^n2]}
