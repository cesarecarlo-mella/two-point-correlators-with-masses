{j[topo1, (n1_)?Positive, (n2_)?NonPositive, (n3_)?Positive, 
   (n4_)?NonPositive, (n5_)?NonPositive] :> 
  Expand[j[topo1, 0, n4, n2, n3, n1]/(-j[topo1, -1, 0, 0, 0, 0] + 
      j[topo1, 0, -1, 0, 0, 0] + j[topo1, 0, 0, -1, 0, 0] + 
      j[topo1, 0, 0, 0, -1, 0] - j[topo1, 0, 0, 0, 0, -1] + 
      pp*j[topo1, 0, 0, 0, 0, 0])^n5]}
